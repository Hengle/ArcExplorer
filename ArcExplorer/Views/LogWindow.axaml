<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        Width="500" Height="500"
        x:Class="ArcExplorer.Views.LogWindow"
        Icon="/Assets/arc.ico"
        Name="thisControl"
        Title="Application Log">
	<ItemsControl ItemsSource="{Binding Items}" DataContext="{Binding ElementName=thisControl}" Margin="5">
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<StackPanel Orientation="Horizontal">
					<Image Margin="5,2" Width="16" Height="16">
						<DrawingImage  Drawing="{StaticResource errorIcon}"></DrawingImage>
					</Image>
					<TextBlock Margin="5,2" Text="{Binding}"></TextBlock>
				</StackPanel>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</Window>
