<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:ArcExplorer.Converters"
             xmlns:vms="clr-namespace:ArcExplorer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArcExplorer.UserControls.FileTreeView"
             Name="thisControl">
  <UserControl.Resources>
    <converters:IconKeyDrawingConverter x:Key="iconKeyDrawingConverter" />
  </UserControl.Resources>
  <ListBox Items="{Binding Items}" DataContext="{Binding ElementName=thisControl}" SelectedItem="{Binding SelectedItem}" VirtualizationMode="Simple" Name="fileListBox">
    <ListBox.DataTemplates>
      <DataTemplate DataType="{x:Type vms:FileNode}">
        <StackPanel Orientation="Horizontal">
          <StackPanel.ContextMenu>
            <ContextMenu>
              <MenuItem Header="Extract Files" DataContext="{Binding ElementName=thisControl}" Command="{Binding ExtractFile}"></MenuItem>
            </ContextMenu>
          </StackPanel.ContextMenu>
          <DrawingPresenter Margin="5,0" Width="16" Height="16" Drawing="{Binding TreeViewIconKey, Converter={StaticResource iconKeyDrawingConverter}}"></DrawingPresenter>
          <TextBlock Text="{Binding Name}"></TextBlock>
        </StackPanel>
      </DataTemplate>
      <DataTemplate DataType="{x:Type vms:FolderNode}">
        <StackPanel Orientation="Horizontal">
          <StackPanel.ContextMenu>
            <ContextMenu>
              <MenuItem Header="Extract Files" DataContext="{Binding ElementName=thisControl}" Command="{Binding ExtractFile}"></MenuItem>
            </ContextMenu>
          </StackPanel.ContextMenu>
          <DrawingPresenter Margin="5,0" Width="16" Height="16" Drawing="{Binding TreeViewIconKey, Converter={StaticResource iconKeyDrawingConverter}}"></DrawingPresenter>
          <TextBlock Text="{Binding Name}"></TextBlock>
        </StackPanel>
      </DataTemplate>
    </ListBox.DataTemplates>
  </ListBox>
</UserControl>
